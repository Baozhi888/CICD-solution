{
  "name": "nodejs-ci-cd-example",
  "version": "1.0.0",
  "description": "Node.js CI/CD示例项目",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "test:coverage": "jest --coverage",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "build": "webpack --mode production",
    "docker:build": "docker build -t nodejs-ci-cd-example .",
    "docker:run": "docker run -p 3000:3000 nodejs-ci-cd-example"
  },
  "keywords": [
    "nodejs",
    "ci-cd",
    "example"
  ],
  "author": "CI/CD Solution",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.0",
    "dotenv": "^16.0.0"
  },
  "devDependencies": {
    "jest": "^29.0.0",
    "eslint": "^8.0.0",
    "prettier": "^2.0.0",
    "nodemon": "^2.0.0",
    "webpack": "^5.0.0",
    "webpack-cli": "^4.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ]
  }
}